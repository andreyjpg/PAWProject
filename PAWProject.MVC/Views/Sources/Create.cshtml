@model SourceViewModel

@{
    ViewData["Title"] = "Nueva fuente";
}

<div class="container mt-4">
    <h3>Nueva fuente</h3>
    <p class="text-muted">
        Aquí el administrador puede registrar nuevas fuentes (RSS, APIs, HTML) que luego el sistema podrá consumir.
    </p>

    <form asp-action="CreateSource" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="NewSource.Name" class="form-label"></label>
            <input asp-for="NewSource.Name" class="form-control" />
            <span asp-validation-for="NewSource.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewSource.Url" class="form-label"></label>
            <input asp-for="NewSource.Url" class="form-control" placeholder="https://feeds.bbci.co.uk/news/rss.xml" />
            <span asp-validation-for="NewSource.Url" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewSource.ComponentType" class="form-label"></label>
            <select asp-for="NewSource.ComponentType" class="form-select">
                <option value="feed">feed (RSS / Atom / XML)</option>
                <option value="api">api (JSON)</option>
                <option value="widget">widget / HTML</option>
            </select>
            <span asp-validation-for="NewSource.ComponentType" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="NewSource.RequiresSecret" class="form-check-input" />
            <label asp-for="NewSource.RequiresSecret" class="form-check-label"></label>
        </div>

        <div class="mb-3">
            <label asp-for="NewSource.Description" class="form-label"></label>
            <textarea asp-for="NewSource.Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="NewSource.Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i> Guardar
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}