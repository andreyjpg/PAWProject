@model PAWProject.MVC.Models.EditUserRoleViewModel
@{
    ViewData["Title"] = "Editar rol";
}

<div class="row justify-content-center">
    <div class="col-md-6 border rounded-4 p-4 border-coral shadow-red">
        <h2 class="mb-3 text-red">Editar rol</h2>

        <form asp-action="EditRole" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="UserId" />

            <div asp-validation-summary="ModelOnly" class="text-warning mb-3"></div>

            <div class="mb-3">
                <label class="form-label text-red fw-bold">Usuario</label>
                <input class="form-control border-coral input-custom" value="@Model.Username" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label text-red fw-bold">Correo</label>
                <input class="form-control border-coral input-custom" value="@Model.Email" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="RoleId" class="form-label text-red fw-bold">Rol</label>
                <select asp-for="RoleId" class="form-select border-coral input-custom" asp-items="ViewBag.Roles">
                    <option value="">Seleccione un rol</option>
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-custom">Guardar</button>
            <a asp-action="Index" class="btn btn-link text-red register-button">Volver</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
