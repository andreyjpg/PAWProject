    @if (Model == null || !Model.SourceItems.Any())
    {
        <div class="alert alert-info">
            Todavía no hay items guardados. Vaya al Home, seleccione una fuente y use el botón <strong>Guardar item</strong>.
        </div>
    }
    else
    {
        <div class="container-saveItems">
            @foreach (var ele in Model.SourceItems)
            {
                var source = ele.Source;
                var item = ele.Item;
                <div class="news-item">
                    <div class="card mb-3 news-box">
                        <div class="card-header">
                            @* <strong class="text-red">@source.Name</strong> *@
                            <span class="badge bg-secondary float-end bg-coral">
                                Guardado: @ele.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                            </span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-red">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                            @if (!string.IsNullOrEmpty(item.Uri))
                            {
                                <a href="@item.Uri" class="btn btn-sm btn-custom" target="_blank">Ver noticia</a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>