@model PAWProject.MVC.Models.HomeViewModel
@using PAWProject.DTOs

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center ">
    <h3 class="mb-4 fw-bold text-red">Recent News</h3>

    <div class="mb-4">
        <form asp-action="Index" method="get" class="row g-2 justify-content-center">
            <div class="col-auto">
                <select name="sourceId" class="form-select select-custom">
                    @foreach (var s in Model.Sources)
                    {
                        <option class="option-custom" value="@s.Id" selected="@(Model.SelectedSourceId == s.Id)">
                            @s.Name
                        </option>
                    }
                </select>
            </div>
            <div class="col-auto mx-lg-2">
                <button type="submit" class="btn btn-custom">
                    Cargar fuente
                </button>
            </div>
        </form>
    </div>

    @if (TempData["Message"] is string msg)
    {
        <div class="alert alert-success">@msg</div>
    }

    <div class="row">
        @if (Model.FeedItems != null)
        {
            foreach (var item in Model.FeedItems)
            {
                <div class="col-md-3 mt-5">
                    <div class="card card-height rounded-3 news-box">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(item.Image))
                            {
                                <img src="@item.Image" alt="Image" height="170" />
                            }
                            <div class="position-absolute bottom-0 bg-gradient-black w-full p-2">
                                <span class="badge bg-yellow text-white">
                                    @item.PublishDate?.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                </span>
                            </div>
                        </div>

                        <div class="card-body h-50">
@*                             <i class="bi bi-bookmark text-yellow"></i>
*@                          <a href="@item.Uri" target="_blank" class="card-title text-main text-md fw-bold link">
                                @item.Title
                            </a>
                            <p class="card-subtitle text-sm mt-2">@item.Description</p>
                            @* <p class="card-subtitle text-sm mt-2 description" data-full="@item.Description"></p>
                            <a class="btn btn-outline-primary" asp-page="/News/Details" asp-route-id="@item.Id">
                                Ver noticia completa
                            </a> *@

                            <form asp-action="SaveItem" method="post" class="position-absolute center-absolute">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="sourceId" value="@Model.SelectedSourceId" />
                                <input type="hidden" name="item.Id" value="@item.Id" />
                                <input type="hidden" name="item.Title" value="@item.Title" />
                                <input type="hidden" name="item.Description" value="@item.Description" />
                                <input type="hidden" name="item.Uri" value="@item.Uri" />
                                <input type="hidden" name="item.Image" value="@item.Image" />
                                <input type="hidden" name="item.PublishDate" value="@item.PublishDate" />
                                <button type="submit" class="btn btn-sm btn-custom">
                                    Guardar item
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    No se encontraron items para la fuente seleccionada.
                </div>
            </div>
        }
    </div>
</div>

