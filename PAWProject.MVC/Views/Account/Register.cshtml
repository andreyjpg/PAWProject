@model PAWProject.MVC.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registro";
}

<div class="row justify-content-center">
    <div class="col-md-6 border rounded-4 p-4 border-coral shadow-red">
        <h2 class="mb-3 text-red">Crear cuenta</h2>

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-warning mb-3"></div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label text-red fw-bold"> Nombre de usuario</label>
                <input asp-for="Username" class="form-control border-coral input-custom" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label text-red fw-bold">Correo Electronico</label>
                <input asp-for="Email" class="form-control border-coral input-custom" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RoleId" class="form-label text-red fw-bold">Rol</label>
                <select asp-for="RoleId" class="form-select  border-coral input-custom" asp-items="ViewBag.Roles">
                    <option value="">Seleccione un rol</option>
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label text-red fw-bold">Contraseña</label>
                <input asp-for="Password" class="form-control border-coral input-custom" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label text-red fw-bold">Confirmar Contraseña</label>
                <input asp-for="ConfirmPassword" class="form-control border-coral input-custom" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-custom">Registrar</button>
            <a asp-action="Login" class="btn btn-link text-red register-button">Volver al login</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
